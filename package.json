{
  "name": "nepal-gov-public-website",
  "version": "1.0.0",
  "private": true,
  "description": "Nepal Government Public Website - Static-First Performance",
  "scripts": {
    "dev": "next dev",
    "dev:webpack": "NEXT_DISABLE_TURBOPACK=1 next dev",
    "dev:turbopack": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "clean": "rm -rf .next && rm -rf node_modules && yarn install",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "static-build": "next build && next export",
    "validate-translations": "node scripts/validate-translations.js",
    "pre-commit": "npm run lint && npm run type-check && npm run validate-translations"
  },
  "dependencies": {
    "@carbon/ibm-products": "^2.75.0",
    "@carbon/icons-react": "^11.49.0",
    "@carbon/react": "^1.91.0",
    "@carbon/themes": "^11.38.0",
    "@phuocng/react-pdf-viewer": "^1.7.0",
    "@react-pdf/renderer": "^4.3.0",
    "@sentry/nextjs": "^8.40.0",
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.7.7",
    "bikram-sambat-js": "^1.0.3",
    "critters": "^0.0.25",
    "date-fns": "^4.1.0",
    "immer": "^10.1.1",
    "ioredis": "^5.7.0",
    "nanoid": "^5.0.8",
    "next": "^15.1.0",
    "next-intl": "^3.22.0",
    "pdfjs-dist": "^5.4.149",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-is": "^19.0.0",
    "react-pdf": "^10.1.0",
    "redis": "^4.7.0",
    "sass": "^1.80.6",
    "sharp": "^0.33.5",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@next/bundle-analyzer": "^15.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
