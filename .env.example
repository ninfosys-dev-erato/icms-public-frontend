# Nepal Government Portal - Environment Variables

# Application
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Nepal Government Portal"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Admin API Configuration
ADMIN_API_BASE_URL=http://localhost:3000/api/v1
ADMIN_API_KEY=your-admin-api-key
ADMIN_API_TIMEOUT=8000

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PREFIX=nepal-gov-portal:

# Search Configuration (Meilisearch)
SEARCH_ENDPOINT=http://localhost:7700
SEARCH_API_KEY=your-meilisearch-master-key
SEARCH_INDEX_PREFIX=nepal_gov_

# Database Configuration (if using direct DB access)
DATABASE_URL=postgresql://username:password@localhost:5432/nepal_gov_portal
DATABASE_POOL_SIZE=10

# File Storage Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=nepal-gov-portal-files
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_PUBLIC_URL=https://files.gov.np

# CDN Configuration
CDN_URL=https://cdn.gov.np
CDN_CACHE_TTL=86400

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@gov.np
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Nepal Government Portal <noreply@gov.np>

# Analytics Configuration
ANALYTICS_ID=your-analytics-id
ANALYTICS_DOMAIN=gov.np

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=government-of-nepal
SENTRY_PROJECT=portal
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=nepal-gov-portal
OTEL_SERVICE_VERSION=1.0.0

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
CSRF_SECRET=your-csrf-secret-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Content Security Policy
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# External Services
WEATHER_API_KEY=your-weather-api-key
MAP_API_KEY=your-map-api-key
CAPTCHA_SITE_KEY=your-recaptcha-site-key
CAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Backup and Sync
BACKUP_ENDPOINT=https://backup.gov.np
BACKUP_API_KEY=your-backup-api-key
SYNC_INTERVAL=3600000

# Development Only
NEXT_PUBLIC_DEBUG=false
ANALYZE_BUNDLE=false
DISABLE_CACHE=false

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_MULTILINGUAL_CONTENT=true
FEATURE_OFFLINE_MODE=false
FEATURE_PWA=true
FEATURE_DARK_MODE=true

# TanStack Query Migration Feature Flags
# Controls both Slider and Employee data fetching
NEXT_PUBLIC_SLIDER_USE_TANSTACK=false
NEXT_PUBLIC_ENABLE_SLIDER_AB_TEST=false

# Localization
DEFAULT_LOCALE=ne
SUPPORTED_LOCALES=ne,en
FALLBACK_LOCALE=ne

# Performance
ENABLE_ISR=true
ISR_REVALIDATE_TIME=300
ENABLE_STATIC_GENERATION=true
PRERENDER_PATHS=/,/ne,/en

# Accessibility
ENABLE_A11Y_CHECKS=true
A11Y_LEVEL=AA

# Legal and Compliance
PRIVACY_POLICY_URL=https://gov.np/privacy
TERMS_OF_SERVICE_URL=https://gov.np/terms
COOKIE_POLICY_URL=https://gov.np/cookies

# Government Specific
GOVERNMENT_NAME="Government of Nepal"
GOVERNMENT_NAME_NE="नेपाल सरकार"
OFFICIAL_WEBSITE=https://www.gov.np
CONTACT_EMAIL=info@gov.np
CONTACT_PHONE=+977-1-4211000

# Ministry Information
MINISTRY_NAME="Office of the Prime Minister and Council of Ministers"
MINISTRY_NAME_NE="प्रधानमन्त्री तथा मन्त्रिपरिषद्को कार्यालय"
MINISTRY_ADDRESS="Singha Durbar, Kathmandu, Nepal"
MINISTRY_POSTAL_CODE=44600

# Social Media
FACEBOOK_URL=https://facebook.com/OfficeofPMNepal
TWITTER_URL=https://twitter.com/PMONepal
YOUTUBE_URL=https://youtube.com/c/PMONepal
INSTAGRAM_URL=https://instagram.com/pmonepal